{
    "uid": "powerout-main",
    "title": "PowerOut — Shelly vs Schedule",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "tags": ["powerout", "shelly", "ukraine"],
    "time": { "from": "now-24h", "to": "now" },
    "timepicker": {
      "time_options": ["24h", "7d", "30d"],
      "refresh_intervals": ["30s", "1m", "5m", "15m", "1h"]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": { "type": "grafana", "uid": "-- Grafana --" },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "state-timeline",
        "title": "Real Power State (Shelly)",
        "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"outages\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"state\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 1m, fn: last, createEmpty: false)"
          }
        ],
        "options": {
          "mergeValues": true,
          "showValue": "never",
          "alignValue": "center",
          "rowHeight": 0.9
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": { "text": "OFF" },
                  "1": { "text": "ON" }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          },
          "overrides": []
        }
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Voltage (V)",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"outages\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"voltage\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 1m, fn: mean, createEmpty: false)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "volt",
            "min": 0
          },
          "overrides": []
        },
        "options": {
          "legend": { "showLegend": true, "placement": "bottom" },
          "tooltip": { "mode": "single" }
        }
      },
      {
        "id": 3,
        "type": "timeseries",
        "title": "Active Power (W)",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"outages\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"apower\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 1m, fn: mean, createEmpty: false)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "min": 0
          },
          "overrides": []
        },
        "options": {
          "legend": { "showLegend": true, "placement": "bottom" },
          "tooltip": { "mode": "single" }
        }
      },
      {
        "id": 4,
        "type": "timeseries",
        "title": "Temperature (°C)",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "from(bucket: \"outages\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"temperature_c\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 5m, fn: mean, createEmpty: false)"
          }
        ],
        "fieldConfig": {
          "defaults": { "unit": "celsius" },
          "overrides": []
        },
        "options": {
          "legend": { "showLegend": true, "placement": "bottom" },
          "tooltip": { "mode": "single" }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Shelly Uptime (last 24h)",
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 14 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "import \"contrib/tomhollingworth/events\"\n\nfrom(bucket: \"outages\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"state\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 1m, fn: last, createEmpty: false)\n  |> map(fn: (r) => ({ r with _value: float(v: r._value) }))\n  |> mean()"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 2,
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "yellow", "value": 0.8 },
                { "color": "green", "value": 0.95 }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        },
        "transformations": [
          {
            "id": "calculateField",
            "options": {
              "mode": "reduceRow",
              "reduce": { "reducer": "lastNotNull" },
              "replaceFields": true,
              "alias": "uptime",
              "binary": {
                "operator": "*",
                "left": "uptime",
                "right": "100"
              }
            }
          }
        ]
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Downtime (last 24h, min)",
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 14 },
        "datasource": { "type": "influxdb", "uid": "InfluxDB" },
        "targets": [
          {
            "refId": "A",
            "query": "import \"contrib/tomhollingworth/events\"\n\nfrom(bucket: \"outages\")\n  |> range(start: -24h)\n  |> filter(fn: (r) => r._measurement == \"power_metrics\")\n  |> filter(fn: (r) => r._field == \"state\")\n  |> filter(fn: (r) => r.device == \"shellyazplug-powerout\")\n  |> aggregateWindow(every: 1m, fn: last, createEmpty: false)\n  |> events.duration(unit: 1m)\n  |> filter(fn: (r) => r._value > 0.0)\n  |> sum()"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "m",
            "decimals": 0
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": { "values": false, "calcs": ["lastNotNull"], "fields": "" },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value"
        }
      }
    ],
    "links": [],
    "templating": { "list": [] }
  }